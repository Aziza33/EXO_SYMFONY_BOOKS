{% extends 'base.html.twig' %}

{% block title %}Books — Index{% endblock %}

{% block body %}
  <div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
      <h1 class="h3 m-0">Book index</h1>
      <a class="btn btn-primary" href="{{ path('app_book_new') }}">Create new</a>
    </div>

    <table class="table table-striped table-hover align-middle">
      <thead>
        <tr>
          <th>Id</th>
          <th>Title</th>
          <th>Writer</th>
          <th>Publication Year</th>
          <th>Image</th>
          <th style="width: 140px;">Actions</th>
        </tr>
      </thead>
      <tbody>
        {% for book in books %}
          <tr>
            <td>{{ book.id }}</td>
            <td>{{ book.title|default('—') }}</td>
            <td>{{ book.writer }}</td>
            <td>{{ book.publicationYear }}</td>
            <td>{{ book.image }}</td>
            <td>
              <a class="btn btn-sm btn-outline-secondary" href="{{ path('app_book_show', { id: book.id }) }}">show</a>
              <a class="btn btn-sm btn-outline-primary ms-1" href="{{ path('app_book_edit', { id: book.id }) }}">edit</a>
            </td>
          </tr>
        {% else %}
          <tr>
            <td colspan="4" class="text-center text-muted">no records found</td>
          </tr>
        {% endfor %}
      </tbody>
    </table>
  </div>
{% endblock %}
